<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title </title>
    <link rel="stylesheet" href="https://unpkg.com/@@picocss/pico@@latest/css/pico.classless.min.css">
</head>
<body style="padding: 1rem;">
    <nav>
        @if(User.IsInRole("Admin")){
            <a asp-controller="Account" asp-action="AdminPage">Admin</a>
        }

        <a asp-controller="Account" asp-action="UserPage">User</a>
        <a asp-controller="Account" asp-action="Register">Register</a>
        @if(User.Identity!.IsAuthenticated)
        {
            <a asp-controller="Account" asp-action="LogOut">Sign out</a>
        } else
        {
            <a asp-controller="Account" asp-action="LogIn">Login</a>
        }
    </nav>
        <h1>@ViewBag.Title</h1>
    <p>@User.Identity!.AuthenticationType</p>
    <div>@RenderBody()</div>
    <footer>&copy; Grupp 7: Stanislav Hallberg, Alberto Nuñez, Tobias Johansson, Mattias persson </footer>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.7.1.min.js"
            asp-fallback-src="~/Scripts/lib/jquery/jquery.min.js"
            asp-fallback-test="window.jQuery"></script>
    @RenderSection("scripts", false)
    </body>
    </html>